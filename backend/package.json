{
  "name": "frumbers-backend",
  "version": "0.0.0",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun .",
    "dev:compose": "MY_UID=$(id -u) MY_GID=$(id -g) docker compose",
    "dev:up": " bun run dev:compose up -d",
    "dev:down": "bun run dev:compose down",
    "dev:tail": "bun run dev:compose logs -f frumbers_backend",
    "lint": "eslint .",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "db:migrate": "bun run dev:compose run --rm -it frumbers_backend x drizzle-kit migrate",
    "db:generate": "bun run dev:compose run --rm -it frumbers_backend x drizzle-kit generate",
    "postinstall": "bun link"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node-random-name": "^1.0.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "3.7.4",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.53.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "@scaleway/random-name": "^5.1.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.22",
    "node-random-name": "^1.0.1",
    "postgres": "^3.4.8",
    "pusher": "^5.3.2",
    "uuid": "^13.0.0"
  }
}
